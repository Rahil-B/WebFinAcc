@model OnlineAccounting.Models.Purchase.PurchaseOrder

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>PurchaseOrder</h4>
    <hr />
    <dl class="row">
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.vendor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.vendor.CompanyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeliverTo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliverTo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubTotal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Discount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Discount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalItems)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalItems)
        </dd>
    </dl>

    <table class="table table-striped">
        <thead>
            <tr class="d-table-row">
                <td>@Html.DisplayNameFor(model => model.ItemList[0].ItemId)</td>
                <td>@Html.DisplayNameFor(model => model.ItemList[0].Quantity)</td>
                <td>@Html.DisplayNameFor(model => model.ItemList[0].Rate)</td>
                <td>@Html.DisplayNameFor(model => model.ItemList[0].Discount)</td>
                <td>@Html.DisplayNameFor(model => model.ItemList[0].Tax)</td>
                <td>@Html.DisplayNameFor(model => model.ItemList[0].Amount)</td>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.ItemList.Count; i++)
            {
                <tr>
                    <td>@Html.DisplayFor(model => model.ItemList[i].ItemId)</td>
                    <td>@Html.DisplayFor(model => model.ItemList[i].Quantity)</td>
                    <td>@Html.DisplayFor(model => model.ItemList[i].Rate)</td>
                    <td>@Html.DisplayFor(model => model.ItemList[i].Discount)</td>
                    <td>@Html.DisplayFor(model => model.ItemList[i].Tax)</td>
                    <td>@Html.DisplayFor(model => model.ItemList[i].Amount)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
