@model OnlineAccounting.Models.Purchase.Bill

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Bill</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.vendor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.vendor.CompanyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubTotal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Discount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Discount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TDS)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TDS)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentId)
        </dd>
    </dl>
    <table class="table table-striped">
        <thead>
            <tr class="d-table-row">
                <td>@Html.DisplayNameFor(model => model.ItemList[0].CustomerID)</td>
                @*<td>@Html.DisplayNameFor(model => model.ItemList[0].item.Name)</td>
        <td>@Html.DisplayNameFor(model => model.ItemList[0].Account.Name)</td>*@
                <td>@Html.DisplayNameFor(model => model.ItemList[0].ItemId)</td>
                <td>@Html.DisplayNameFor(model => model.ItemList[0].AccountId)</td>
                <td>@Html.DisplayNameFor(model => model.ItemList[0].Quantity)</td>
                <td>@Html.DisplayNameFor(model => model.ItemList[0].Rate)</td>
                <td>@Html.DisplayNameFor(model => model.ItemList[0].Tax)</td>
                <td>@Html.DisplayNameFor(model => model.ItemList[0].Amount)</td>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.ItemList.Count; i++)
            {
            <tr>
                <td>@Html.DisplayFor(model => model.ItemList[i].CustomerID)</td>
                @*<td>@Html.DisplayFor(model => model.ItemList[i].item.Name)</td>
        <td>@Html.DisplayFor(model => model.ItemList[i].Account.Name)</td>*@
                <td>@Html.DisplayFor(model => model.ItemList[i].ItemId)</td>
                <td>@Html.DisplayFor(model => model.ItemList[i].AccountId)</td>
                <td>@Html.DisplayFor(model => model.ItemList[i].Quantity)</td>
                <td>@Html.DisplayFor(model => model.ItemList[i].Rate)</td>
                <td>@Html.DisplayFor(model => model.ItemList[i].Tax)</td>
                <td>@Html.DisplayFor(model => model.ItemList[i].Amount)</td>
            </tr>
            }
        </tbody>
    </table>
</div>
